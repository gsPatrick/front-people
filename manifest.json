{
  "manifest_version": 3,
  "name": "InHire Helper",
  "version": "1.0.0",
  "description": "Integração inteligente entre LinkedIn e InHire.",
  "permissions": [
    "storage",
    "tabs", 
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*",
    "http://localhost:4000/*" 
  ],
  "action": {
    "default_title": "Abrir InHire Helper",
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo.png",
      "32": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "web_accessible_resources": [
    {
      "resources": [ "logo.png" ],
      "matches": [ "<all_urls>" ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}