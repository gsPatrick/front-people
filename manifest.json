{
  "manifest_version": 3,
  "name": "Anna Isidoro",
  "version": "1.0.0",
  "description": "Anna Isidoro Chrome Extension",
  "permissions": [
    "storage",
    "sidePanel",
    "tabs",
    "scripting",
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*",
    "http://localhost:4000/*"
  ],
  "action": {
    "default_title": "Abrir Anna Isidoro"
  },
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "logo.png",
        "assets/*",
        "scripts/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}